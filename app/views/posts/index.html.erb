<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th><br>
      <th>Images</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <b><u><%= post.user.email %><br></u></b>
        <%= post.content %><br>
        <%= image_tag post.image.url, style:'width:100px;height:80px' %><br>
        <%= link_to 'Show', post,style:'padding:5px' %>
        <% if current_user.id == post.user_id %>
        <%= link_to 'Edit', edit_post_path(post),style:'padding:5px' %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </tr><br><br>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
