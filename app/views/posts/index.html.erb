<p id="notice"><%= notice %></p>
<div class="container">
<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Poster</th>
      <th>Image</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user.email %></td>
        <td><%= image_tag post.image.url, style:"width:100px;height:80px" %></td>
        <td><%= post.content %></td>
        <td><button type="button" class="btn btn-primary"><%= link_to 'Show', post,style:'padding:5px', data: { confirm: 'Are you sure?'} %></button></td>
        <td><button type="button" class="btn btn-warning"><%= link_to 'Edit', edit_post_path(post),style:'padding:5px', data: { confirm: 'Are you sure?' }  %></button></td>
        <td><button type="button" class="btn btn-danger"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-success"><%= link_to 'New Post', new_post_path %></button>
